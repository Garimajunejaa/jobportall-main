{
  "buildCommand": "npm install && cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "functions": {
    "backend/api.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/backend/api.js"
    },
    {
      "source": "/api/test/(.*)",
      "destination": "/api/test.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}